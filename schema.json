{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperField",
    "friendlyName": "Super Field",
    "description": "A multi type Input Field component for Budibase",
    "icon": "EditInLight",
    "context" : {
      "type" : "static",
      "values" : [
        {
          "label" : "Field Value",
          "key" : "value",
          "type" : "object" 
        }
      ]
    },
    "settings": [

      {
        "type" : "select",
        "label" : "Type",
        "key" : "fieldType",
        "showInBar" : true,
        "options" : [
          { "label" : "String" , "value" : "string" },
          { "label" : "Number" , "value" : "number" },
          { "label" : "Boolean" , "value" : "boolean" },
          { "label" : "DateTime" , "value" : "datetime" },
          { "label" : "Options" , "value" : "options"},
          { "label" : "Relationship" , "value" : "link" }
        ],
        "defaultValue" : "string"
      },      
      {
        "type": "field/string",
        "label": "Field",
        "key": "field",
        "resetOn" : "fieldType"
      },
      {
        "type" : "boolean",
        "key": "inForm",
        "hidden" : true
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder",
        "resetOn" : "fieldType"
      },
      {
        "type": "text",
        "label": "Default value",
        "key": "defaultValue",
        "resetOn" : "fieldType",
        "supportsConditions": false
      },
      {
        "type": "text",
        "label": "Help text",
        "key": "helpText"
      },
      {
        "type": "event",
        "label": "On change",
        "key": "onChange",
        "context": [
          {
            "label": "Field Value",
            "key": "value"
          }
        ]
      },
      {
        "type": "validation/string",
        "label": "Validation",
        "key": "stringValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "string" }
      },
      {
        "type": "validation/number",
        "label": "Validation",
        "key": "numberValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "number" }
      },
      {
        "type": "validation/boolean",
        "label": "Validation",
        "key": "booleanValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "boolean" }
      },
      {
        "type": "validation/datetime",
        "label": "Validation",
        "key": "datetimeValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "datetime" }
      },
      {
        "type": "validation/array",
        "label": "Validation",
        "key": "arrayValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "array" }
      },
      {
        "type": "validation/array",
        "label": "Validation",
        "key": "optionsValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "options" }
      },
      {
        "type": "validation/link",
        "label": "Validation",
        "key": "linkValidation",
        "resetOn" : "fieldType",
        "dependsOn" : { "setting" : "fieldType", "value": "link" }
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Read only",
        "key": "readonly",
        "defaultValue": false,
        "dependsOn": {
          "setting": "disabled",
          "value": true,
          "invert": true
        }
      },
      {
        "type": "select",
        "label": "Alignment",
        "key": "align",
        "defaultValue": "left",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Left",
            "value": "left",
            "barIcon": "TextAlignLeft",
            "barTitle": "Align left"
          },
          {
            "label": "Center",
            "value": "center",
            "barIcon": "TextAlignCenter",
            "barTitle": "Align center"
          },
          {
            "label": "Right",
            "value": "right",
            "barIcon": "TextAlignRight",
            "barTitle": "Align right"
          },
          {
            "label": "Justify",
            "value": "justify",
            "barIcon": "TextAlignJustify",
            "barTitle": "Justify text"
          }
        ]
      },
      {
        "type": "select",
        "label": "Layout",
        "key": "span",
        "defaultValue": 6,
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "1 column",
            "value": 6,
            "barIcon": "Stop",
            "barTitle": "1 column"
          },
          {
            "label": "2 columns",
            "value": 3,
            "barIcon": "ColumnTwoA",
            "barTitle": "2 columns"
          },
          {
            "label": "3 columns",
            "value": 2,
            "barIcon": "ViewColumn",
            "barTitle": "3 columns"
          }
        ]
      },
      {
        "type" : "icon",
        "key" : "frontIcon",
        "label" : "Inline Icon"
      },
      {
        "type" : "boolean",
        "key" : "customButtons",
        "label" : "Custom Buttons",
        "defaultValue": false
      },
      {
        "section": true,
        "name": "Front Inline Buttons",
        "dependsOn" : "customButtons",
        "settings": [
          {
            "type": "boolean",
            "key" : "frontButtonsQuiet",
            "label" : "Quiet",
            "defaultValue" : false
          },
          {
            "type": "select",
            "key" : "frontButtonsGrouping",
            "label" : "Grouping",
            "options" : [
              { "label" : "No Grouping", "value" : false },
              { "label" : "Single Selection", "value" : "single" },
              { "label" : "Multi Selection", "value" : "multi" }
            ],
            "defaultValue" : false
          },
          {
            "type": "buttonConfiguration",
            "key": "frontButtons"
          }
        ]
      },
      {
        "section": true,
        "name": "End Inline Buttons",
        "dependsOn" : "customButtons",
        "settings": [
          {
            "type": "boolean",
            "key" : "buttonsQuiet",
            "label" : "Quiet",
            "defaultValue" : false
          },
          {
            "type": "select",
            "key" : "buttonsGrouping",
            "label" : "Grouping",
            "options" : [
              { "label" : "No Grouping", "value" : false },
              { "label" : "Single Selection", "value" : "single" },
              { "label" : "Multi Selection", "value" : "multi" }
            ],
            "defaultValue" : false
          },
          {
            "type": "buttonConfiguration",
            "key": "buttons",
            "nested" : true
          }
        ]
      },
      {
        "section" : true,
        "name" : "Options Settings",
        "dependsOn" : {"setting" : "fieldType" , "value" : "options" },
        "settings" : [
          {
            "type" : "select",
            "key"  : "optionsSource",
            "label": "Options Source",
            "options" : [
              { "label" : "Schema" , "value" : "schema" },
              { "label" : "Data Source" , "value" : "datasource" }
            ]
          },
          {
            "type" : "dataSource",
            "key"  : "datasource",
            "label": "Data Source",
            "dependsOn" : { "setting" : "optionsSource", "value" : "datasource" }
          },
          {
            "type" : "field",
            "key"  : "valueField",
            "label": "Value Field",
            "dependsOn" : { "setting" : "optionsSource", "value" : "datasource" }
          },
          {
            "type" : "field",
            "key"  : "labelField",
            "label": "Label Field",
            "dependsOn" : { "setting" : "optionsSource", "value" : "datasource" }
          },
          {
            "type" : "select",
            "key"  : "viewMode",
            "label": "View Mode",
            "options" : [
              { "label" : "Pills" , "value" : "pills" },
              { "label" : "Checkboxes" , "value" : "checkboxes" },
              { "label" : "Radio Buttons" , "value" : "radioButtons" },
              { "label" : "Buttons" , "value" : "buttons" },
              { "label" : "Text" , "value" : "text" }
            ],
            "defaultValue" : "pills"
          },
          {
            "type" : "boolean",
            "key"  : "optionsColors",
            "label": "Options Colors",
            "defaultValue" : true
          }
        ]
      }
